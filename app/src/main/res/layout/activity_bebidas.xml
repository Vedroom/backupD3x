<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".pbebidas.bebidas">

    <ImageButton
        android:id="@+id/BtnElimB"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:background="#FFEB3B"
        android:contentDescription="@string/btnElimB"
        android:onClick="Eliminar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/eliminar" />

    <ImageButton
        android:id="@+id/btnModP"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:background="#FFEB3B"
        android:contentDescription="@string/btnModB"
        android:onClick="Modificar"
        app:layout_constraintBottom_toTopOf="@+id/BtnElimB"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/editar" />

    <ImageButton
        android:id="@+id/btnAgregarB"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:background="#FFEB3B"
        android:contentDescription="@string/btnAgregarB"
        app:layout_constraintBottom_toTopOf="@+id/btnModP"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/agregar"
        tools:ignore="OnClick" />

    <Button
        android:id="@+id/botonArgrega"
        android:layout_width="63dp"
        android:layout_height="47dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="#FFEB3B"

        android:text="+"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/btnAgregarB"
        app:layout_constraintEnd_toEndOf="parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="10dp">

        <ListView
            android:id="@+id/listViewBebidas"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>